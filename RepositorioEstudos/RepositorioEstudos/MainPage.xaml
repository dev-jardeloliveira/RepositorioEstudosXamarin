<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepositorioEstudos.MainPage"
             Title="Funcionalidades">

    <StackLayout Margin="20" Spacing="10">
        
        <Label  HorizontalOptions="Start"  FontSize="12">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding QrCodeCommand}" />
                </Label.GestureRecognizers>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Funcionalidade (clique) " TextColor="#444444"/>
                    <Span Text="QR CODE " TextColor="Black" TextDecorations="Underline" FontSize="14"/>
                    <Span Text="o meio mais simples e prático de compartilhar informação. " TextColor="#444444"/>
                </FormattedString>
            </Label.FormattedText>
            </Label>
        
        <Label  HorizontalOptions="Start"  FontSize="12">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding FontCommand}" />
            </Label.GestureRecognizers>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Trabalhando com (clique) " TextColor="#444444"/>
                    <Span Text="FONTS " TextColor="Black" TextDecorations="Underline" FontSize="14"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label  HorizontalOptions="Start"  FontSize="12">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CustomCommand}" />
            </Label.GestureRecognizers>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Trabalhando com (clique) " TextColor="#444444"/>
                    <Span Text="Custom " TextColor="Black" TextDecorations="Underline" FontSize="14"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label  HorizontalOptions="Start"  FontSize="12">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CafeCommand}" />
            </Label.GestureRecognizers>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Trabalhando com (clique) " TextColor="#444444"/>
                    <Span Text="Design " TextColor="Black" TextDecorations="Underline" FontSize="14"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

    </StackLayout>

</ContentPage>
